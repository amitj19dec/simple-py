# Azure AI Search Configuration with Service Principal
AZURE_AI_SEARCH_ENDPOINT=https://your-search-service.search.windows.net
AZURE_AI_SEARCH_INDEX=expense-policy-index

# Azure AD Service Principal Configuration
AZURE_CLIENT_ID=your-service-principal-client-id
AZURE_CLIENT_SECRET=your-service-principal-client-secret
AZURE_TENANT_ID=your-azure-tenant-id

# Azure PostgreSQL Configuration (for production)
AZURE_POSTGRES_CONNECTION_STRING=postgresql://username:password@your-azure-postgres.postgres.database.azure.com:5432/expense_sessions?sslmode=require

# Google AI Configuration
GOOGLE_API_KEY=your-google-api-key
GOOGLE_GENAI_USE_VERTEXAI=False

# Application Configuration
PORT=8000
ENVIRONMENT=development
